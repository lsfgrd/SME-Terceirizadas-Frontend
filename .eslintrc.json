// https://github.com/yannickcr/eslint-plugin-react#configuration
{
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "import"],
  "rules": { "eqeqeq": "error", "yoda": "error" },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
